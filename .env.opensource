# ====================================
# FREE & OPEN SOURCE AI CHATBOT CONFIG
# ====================================
# This configuration uses only free and open source models
# No paid APIs or external services required

# SPEECH-TO-TEXT (STT) - OpenAI Whisper (FREE)
ASR_MODEL_NAME=base
ASR_DEVICE=cpu

# TEXT-TO-SPEECH (TTS) - Coqui TTS (FREE & OPEN SOURCE)
TTS_MODEL_NAME=tts_models/en/ljspeech/xtts_v2
TTS_DEVICE=cpu
USE_COQUI_TTS=true
USE_EDGE_TTS=false

# LARGE LANGUAGE MODEL - Ollama (FREE & LOCAL)
LLM_PROVIDER=ollama
LLM_MODEL_NAME=llama3.2:3b
LLM_API_URL=http://localhost:11434

# Remove all API keys for completely free setup
GROQ_API_KEY=
OPENAI_API_KEY=

# LOCAL EMBEDDINGS for RAG (FREE)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
USE_RAG=true

# SERVER CONFIGURATION
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=true
CORS_ORIGINS=["*"]

# AUDIO SETTINGS
SAMPLE_RATE=16000
CHUNK_SIZE=1024
MAX_AUDIO_LENGTH=60

# ENABLE OPEN SOURCE MODE
OPEN_SOURCE_MODE=true
OFFLINE_MODE=true