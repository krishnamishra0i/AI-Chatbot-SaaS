# Environment Configuration
# Copy this to .env and fill in your values

# API Server
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True

# ASR (Speech-to-Text)
ASR_DEVICE=cpu  # or cuda
ASR_MODEL=base   # tiny, base, small, medium, large

# TTS (Text-to-Speech)
TTS_DEVICE=cpu   # or cuda
TTS_MODEL=xtts_v2

# LLM Configuration
LLM_PROVIDER=ollama  # ollama or openai
LLM_MODEL=mistral    # mistral, llama2, neural-chat, etc.
LLM_API_URL=http://localhost:11434

# OpenAI Settings (if using OpenAI)
OPENAI_API_KEY=

# Database Paths
VECTOR_DB_PATH=data/vector_db
KNOWLEDGE_BASE_DIR=data/knowledge_base

# Audio Settings
SAMPLE_RATE=16000
MAX_AUDIO_LENGTH=60

# CORS
CORS_ORIGINS=*
